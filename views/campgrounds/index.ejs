    <%- layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">New Campground</a>
    </div>
    <%for(let cg of campgrounds)  {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%= cg.images[0].url %> ">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= cg.title %> </h5>
                    <p class="card-text"><%=cg.description  %> </p>
                    <p class="card-text">
                        <small class="text-muted"><%= cg.location %> </small>
                    </p>
                    <a href="/campgrounds/<%=cg.id%> " class="btn btn-primary">View <%= cg.title %> </a>
                </div>
            </div>
        </div>
    </div>
    <%}  %>